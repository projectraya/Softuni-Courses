@model BookDetailsModel

@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="height: 400px; object-fit: cover;" />

                <div class="card-body">
                    <h2 class="card-title text-center">@Model.Title</h2>
                    <hr />
                    <p class="card-text"><strong>Author:</strong> @Model.AuthorName</p>
                    <p class="card-text"><strong>Category:</strong> @Model.CategoryName</p>
                    <p class="card-text"><strong>Published:</strong> @Model.YearPublished</p>
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Library</a>
                </div>
            </div>
        </div>
    </div>
</div>
